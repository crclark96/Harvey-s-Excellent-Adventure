<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.udel.crclark.harveysexcellentadventure.Episode1Menu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Episode 1"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harvey needs to get to class, but he&apos;s really tired! \nGuide him to the front of the line so he can get some coffee..."
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_marginTop="58dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dunkin Donuts"
        android:id="@+id/buttonDD"
        android:onClick="gotoEp1MainActivityDunkin"
        android:layout_marginLeft="30dp"
        android:layout_alignTop="@+id/buttonSB"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starbucks"
        android:id="@+id/buttonSB"
        android:onClick="gotoEp1MainActivityStarbucks"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView2" />

</RelativeLayout>
